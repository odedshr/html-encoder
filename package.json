	"description": "a CLI for converting HTML to javascript code",
	"main": "dist/index.js",
	"scripts": {
		"test": "mocha tests/*.test.js",
		"build": "npm run copy & npm run rollupw",
		"rollup": "rollup -c",
		"rollupw": "rollup -cw",
		"copy": "node ./node_modules/assetomat/index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/odedshr/html-encoder.git"
	},
	"author": "odedshr@gmail.com",
