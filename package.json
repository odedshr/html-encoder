{
  "name": "html-encoder",
  "displayName": "HTML Encoder",
  "description": "Encode your HTML templates to Javascript or TypeScript instructions",
  "version": "1.0.3",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run copy & tsc & npm run build:es",
    "build:watch": "npm run copy:watch & npm run build:es:watch & tsc -w",
    "copy": "node ./node_modules/assetomat/index.js once",
    "copy:watch": "node ./node_modules/assetomat/index.js",
    "build:es": "tsc -p ./tsconfig.es.json",
    "build:es:watch": "tsc -w -p ./tsconfig.es.json",
    "pretest": "npm run build",
    "test": "mocha src/test/*.test.js",
    "test:extension": "node ./out/test/runTest.js",
    "vscode:package": "vsce package",
    "vscode:publish": "vsce publish"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#4e6885",
    "theme": "dark"
  },
  "publisher": "odedshr",
  "author": {
    "name": "odedshr@gmail.com"
  },
  "homepage": "https://github.com/odedshr/html-encoder/blob/vscode-extension/README.md",
  "license": "https://github.com/odedshr/html-encoder/blob/master/LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/odedshr/html-encoder.git"
  },
  "bugs": {
    "url": "https://github.com/odedshr/html-encoder/issues",
    "name": "odedshr@gmail.com"
  },
  "assets": [
    {
      "source": "src/JSNode.ts",
      "target": [
        "out/JSNode.template-ts",
        "src/JSNode.es.ts"
      ]
    }
  ],
  "engines": {
    "vscode": "^1.45.1"
  },
  "activationEvents": [
    "onLanguage:html-encoder"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "html-encoder",
        "aliases": [
          "HTML-Encoder"
        ],
        "extensions": [
          "template.html"
        ]
      }
    ]
  },
  "dependencies": {
    "@types/xmldom": "^0.1.29",
    "chokidar": "^3.4.0",
    "xmldom": "^0.3.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.10",
    "@types/vscode": "^1.45.1",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "assert": "^2.0.0",
    "assetomat": "^1.1.1",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.2.0",
    "require-from-string": "^2.0.2",
    "typescript": "^3.9.3",
    "uglify-js": "^3.9.4",
    "vscode-test": "^1.3.0"
  }
}