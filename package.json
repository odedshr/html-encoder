	"bugs": {
		"url": "https://github.com/odedshr/html-encoder/issues"
	},
	"homepage": "https://github.com/odedshr/html-encoder#readme",
	"assets": [
		{
			"source": "src/JSNode.ts",
			"target": "dist/JSNode.ts"
		}
	],
	"devDependencies": {
		"assert": "^2.0.0",
		"assetomat": "^1.0.0",
		"mocha": "^6.2.1",
		"require-from-string": "^2.0.2",
		"rollup": "^1.23.1",
		"rollup-plugin-bundle-imports": "^1.4.5",
		"rollup-plugin-terser": "^5.1.2",
		"rollup-plugin-typescript2": "^0.24.3",
