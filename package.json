{
  "name": "html-encoder",
  "displayName": "HTML Encoder",
  "description": "Encode your HTML templates to Javascript or TypeScript instructions",
  "version": "2.0.8",
  "scripts": {
    "build": "npm run copy & tsc & npm run build:es",
    "copy": "cp src/typescript/js-node.ts dist/typescript/js-node.template-ts",
    "build:es": "cp src/typescript/js-node.ts src/typescript/js-node.es.ts && tsc -p ./tsconfig.es.json && rm src/typescript/js-node.es.ts",
    "bundle": "cp src/typescript/js-node.ts dist/typescript/js-node.template-ts & node bundler.js",
    "pretest": "npm run build",
    "test": "mocha src/test/**/*.test.js",
    "test:coverage": "nyc mocha src/test/**/*.test.js"
  },
  "icon": "images/icon.png",
  "main": "dist/html-encoder.js",
  "keywords": [
    "html",
    "js",
    "ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/odedshr/html-encoder.git"
  },
  "publisher": "odedshr",
  "author": {
    "name": "Oded Sharon",
    "email": "odedshr@gmail.com"
  },
  "license": "ISC",
  "bundledEntries": [
    {
      "entryPoint": "src/html-encoder.ts",
      "outfile": "dist/html-encoder.js",
      "platform": "node"
    },
    {
      "entryPoint": "src/typescript/js-node.ts",
      "outfile": "dist/js-node.js",
      "platform": "node"
    },
    {
      "entryPoint": "src/typescript/js-node.ts",
      "outfile": "dist/typescript/js-node.es.ts",
      "platform": "browser"
    },
    {
      "entryPoint": "src/typescript/transpiles.ts",
      "outfile": "dist/typescript/transpiles.js"
    }
  ],
  "dependencies": {
    "@types/xmldom": "^0.1.31",
    "@xmldom/xmldom": "^0.8.0"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.8",
    "assert": "^2.0.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "require-from-string": "^2.0.2",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "uglify-js": "^3.14.5",
    "uuid": "^8.3.2"
  }
}