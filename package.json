{
  "name": "html-encoder",
  "displayName": "HTML Encoder",
  "description": "Encode your HTML templates to Javascript or TypeScript instructions",
  "version": "2.0.7",
  "scripts": {
    "build": "npm run copy & tsc & npm run build:es",
    "build:watch": "npm run copy:watch & npm run build:es:watch & tsc -w",
    "copy": "cat src/typescript/js-node.ts | tee dist/typescript/js-node.template-ts src/typescript/js-node.es.ts > /dev/null",
    "copy:watch": "chokidar \"src/typescript/js-node.ts\" -c \"npm run copy\"",
    "build:es": "tsc -p ./tsconfig.es.json",
    "build:es:watch": "tsc -w -p ./tsconfig.es.json",
    "pretest": "npm run build",
    "test": "mocha src/test/**/*.test.js",
    "test:coverage": "nyc mocha src/test/**/*.test.js"
  },
  "icon": "images/icon.png",
  "main": "dist/html-encoder.js",
  "keywords": [
    "html",
    "js",
    "ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/odedshr/html-encoder.git"
  },
  "publisher": "odedshr",
  "author": {
    "name": "Oded Sharon",
    "email": "odedshr@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "@types/xmldom": "^0.1.31",
    "@xmldom/xmldom": "^0.8.0"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "assert": "^2.0.0",
    "chokidar": "^3.5.2",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "require-from-string": "^2.0.2",
    "typescript": "^4.5.4",
    "uglify-js": "^3.14.5",
    "uuid": "^8.3.2"
  }
}